{
	"devDependencies": {
		"@playwright/test": "^1.58.1",
		"@types/node": "^25.2.0",
		"playwright": "^1.58.1",
		"@testing-library/dom": "^10.4.1",
		"jest": "^30.2.0",
		"jest-environment-jsdom": "^30.2.0",
		"jsts": "^2.12.1"
	},
	"name": "svgmaplv0.2",
	"description": "Modular SVGMap.js alpha",
	"version": "0.0.1",
	"main": "SVGMapLv0.1.js",
	"scripts": {
		"test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
		"report": "NODE_OPTIONS=--experimental-vm-modules npx jest --coverage",
		"e2e": "npx playwright test"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/svgmap/svgMapLv0.2.git"
	},
	"author": "",
	"license": "MPL-2.0 (See LICENSE file for details)",
	"bugs": {
		"url": "https://github.com/svgmap/svgMapLv0.2/issues"
	},
	"homepage": "https://github.com/svgmap/svgMapLv0.2#readme",
	"type": "module",
	"jest": {
		"verbose": false,
		"testEnvironment": "jsdom",
		"testMatch": [
			"<rootDir>/tests/unittest/*.test.js",
			"<rootDir>/tests/unittest/**.test.js"
		],
		                "testPathIgnorePatterns": [
		                        "<rootDir>/node_modules/",
		                        "<rootDir>/tests/e2e/"
		                ],
		                "moduleNameMapper": {
		                        "^https://localhost:5500/svgMapLv0.2/InterWindowMessaging.js$": "<rootDir>/InterWindowMessaging.js",
		                        "^https://cdn.jsdelivr.net/gh/svgmap/svgmapjs@latest/libs/(.*)$": "<rootDir>/libs/$1"
		                }
		        }
		}
